<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	tools:background="@drawable/bg_bottom_sheet_score"
	android:paddingBottom="@dimen/margin_large_x2">
	
	<TextView
		android:id="@+id/tv_show_category_sheet"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_large"
		android:text="نمایش دسته انتخابی"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<Button
		android:id="@+id/btn_easy_sheet"
		android:layout_width="0dp"
		android:layout_height="70dp"
		android:layout_marginStart="@dimen/margin_large"
		android:layout_marginEnd="@dimen/margin_large"
		android:background="@drawable/bg_button_selected_purple_to_green"
		android:textSize="@dimen/font_large"
		android:fontFamily="@font/iran_sans_bold"
		android:text="2"
		app:layout_constraintBottom_toBottomOf="@+id/btn_regular_sheet"
		app:layout_constraintEnd_toStartOf="@+id/btn_regular_sheet"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/btn_regular_sheet" />
	
	<Button
		android:id="@+id/btn_regular_sheet"
		android:layout_width="0dp"
		android:layout_height="70dp"
		android:layout_marginStart="@dimen/margin_large"
		android:layout_marginTop="@dimen/space_standard"
		android:layout_marginEnd="@dimen/margin_large"
		android:background="@drawable/bg_button_selected_purple_to_green"
		android:textSize="@dimen/font_large"
		android:fontFamily="@font/iran_sans_bold"
		android:text="4"
		app:layout_constraintEnd_toStartOf="@+id/btn_hard_sheet"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/btn_easy_sheet"
		app:layout_constraintTop_toBottomOf="@+id/tv_show_category_sheet" />
	
	<Button
		android:id="@+id/btn_hard_sheet"
		android:layout_width="0dp"
		android:layout_height="70dp"
		android:layout_marginStart="@dimen/margin_large"
		android:layout_marginEnd="@dimen/margin_large"
		android:background="@drawable/bg_button_selected_purple_to_green"
		android:textSize="@dimen/font_large"
		android:fontFamily="@font/iran_sans_bold"
		android:text="6"
		app:layout_constraintBottom_toBottomOf="@+id/btn_regular_sheet"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/btn_regular_sheet"
		app:layout_constraintTop_toTopOf="@+id/btn_regular_sheet" />
	
	<Button
		android:id="@+id/btn_start_sheet"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/space_standard"
		android:layout_marginRight="@dimen/space_standard"
		android:layout_marginLeft="@dimen/space_standard"
		android:textSize="@dimen/font_large"
		android:text="شروع"
		android:visibility="invisible"
		android:background="@drawable/bg_button_start_game"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btn_regular_sheet" />

</androidx.constraintlayout.widget.ConstraintLayout>